{
  "name": "steein/steein-sdk",
  "description": "Steein SDK",
  "keywords": ["steein", "sdk","library","steein-api"],
  "type":   "library",
  "homepage": "https://github.com/steein/steein-sdk-php",
  "license": "Steein Platform",
  "authors": [
    {
      "name": "Shamsudin Serderov",
      "email": "support@steein.ru"
    }
  ],

  "require": {
    "php": "^5.6|^7.0",
    "guzzlehttp/guzzle": "6.2.3",
    "steein/collections": "1.1.5"
  },

  "require-dev": {
    "phpunit/phpunit": "~5.7.19"
  },

  "suggest": {
    "paragonie/random_compat": "Provides a better CSPRNG option in PHP 5",
    "guzzlehttp/guzzle": "Allows for implementation of the Guzzle HTTP client"
  },

  "autoload": {
    "psr-4": {
      "Steein\\SDK\\": "src/Steein/SDK"
    },
    "files": ["src/Steein/SDK/functions.php"]
  },

  "autoload-dev": {
    "psr-4": {
      "Steein\\SDK\\Tests\\": "tests/"
    }
  },

  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
